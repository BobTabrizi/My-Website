---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import MainPage from '../assets/images/hero.png';
import Skills from '../components/skills.astro';

const metadata = {
  title: 'About Bob Tabrizi',
};

const steps = [
  {
    icon: "mdi:work",
    name: "Lead Full Stack Engineer",
    content: "Creator of Full stack applications",
    content2:
      "My favorite part of my job is the variety of work. Front end or back end, its always fun to work on something new everyday",
  },
  {
    icon: "ri:open-source-fill",
    name: "UCSD Class of 2021",
    content:
      "B.S in Computer Science & Mathematics",
  },
  {
    icon: "simple-icons:stackoverflow",
    name: "Open Source Contributor",
    content:
      "Contributes to open source projects.",
  }
];

---

<Layout metadata={metadata}>
  <main>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl">
    <div class="grid gap-6 row-gap-10 md:grid-cols-2">
      <div class="md:py-6 md:pr-16 text-gray-700 dark:text-gray-400">
        {
          steps.map((step) => (
            <div class="flex">
              <div class="flex flex-col items-center mr-4">
                <div>
                  <div class="flex items-center justify-center w-10 h-10 rounded-full border-blue-500 border-2">
                    <Icon
                      name={step.icon}
                      class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold"
                    />
                  </div>
                </div>
                {step.content && <div class="w-px h-full bg-gray-300 dark:bg-slate-500" />}
              </div>
              <div class="pt-1 pb-8">
                <p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">
                  {step.name}
                </p>
                <p class="mb-2">{step.content}</p>
                <p>{step.content2}</p>
              </div>
            </div>
          ))
        }
      </div>
      <div class="relative hidden md:block">
        <Image
          alt="My Photo"
          src={MainPage}
          class="inset-0 object-cover object-top w-full rounded-md shadow-lg md:absolute md:h-full dark:brightness-75"
          sizes="(max-width: 768px) 100vw, 432px"
        />
      </div>
    </div>
  </section>
  <Skills/>
  </main>
</Layout>
